<div style="text-align:left">

<% if @user && @user.errors.any? %>
  <div id="error_explanation" style="border-color:red; border-width:1px; border-style:solid; padding:2em">
    <b>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited your account from being created:
    </b>
    <br>
    <% @user.errors.full_messages.each do |msg| %>
      <%= msg %><br>
    <% end %>
  </div>
  <br>
<% end %>

<%= form_for :user, url: '/users' do |f| %>
  Username: <%= f.text_field :name %><br>
  Email: <%= f.text_field :email, placeholder: "optional" %><br>
  Password: <%= f.password_field :password %><br>
  Password Confirmation: <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Submit" %>
<% end %>

</div>